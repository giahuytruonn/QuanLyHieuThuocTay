<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="QuanLyHieuThuocTayPU">
        <!-- Liệt kê các entity trong project -->
        <class>qlhtt.Entity.ChietKhau</class>
        <class>qlhtt.Entity.ChiTietHoaDon</class>
        <class>qlhtt.Entity.ChiTietPhieuNhap</class>
        <class>qlhtt.Entity.DonViTinh</class>
        <class>qlhtt.Entity.HoaDon</class>
        <class>qlhtt.Entity.KhachHang</class>
        <class>qlhtt.Entity.LoaiSanPham</class>
        <class>qlhtt.Entity.NhaCungCap</class>
        <class>qlhtt.Entity.NhanVien</class>
        <class>qlhtt.Entity.NhomSanPham</class>
        <class>qlhtt.Entity.PhieuNhap</class>
        <class>qlhtt.Entity.SanPham</class>
        <class>qlhtt.Entity.TaiKhoan</class>
        <class>qlhtt.Entity.ChiTietHoaDonId</class>

        <!-- Cấu hình kết nối cơ sở dữ liệu -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=pharmacy_system;encrypt=false;trustServerCertificate=true" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="sapassword" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>
